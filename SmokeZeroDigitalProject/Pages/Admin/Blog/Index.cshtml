				<i class="fa fa-bars"></i>
			</a>
			<!-- /Mobile Menu Toggle -->
			<!-- Header Right Menu -->
			<!-- /Header Right Menu -->

		</div>
		<!-- /Header -->
		<!-- Sidebar -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-inner slimscroll">
				<div id="sidebar-menu" class="sidebar-menu">
					<ul>
						<li class="menu-title">
							<span>Main</span>
						</li>
						<li>
							<a asp-page="/Admin/Dashboard/Index"><i class="fe fe-home"></i> <span>Dashboard</span></a>
						</li>
						<li>
							<a asp-page="/Admin/User/Index"><i class="fe fe-user"></i> <span>Người dùng</span></a>
						</li>
						<li>
							<a asp-page="/Admin/Coach/Index"><i class="fe fe-users"></i> <span>Huấn luyện viên</span></a>
						</li>
						<li>
							<a asp-page="/Admin/Plan/Index"><i class="fe fe-credit-card"></i> <span>Danh sách gói</span></a>
						</li>
						<li>
							<a asp-page="/Admin/Feedback/Index"><i class="fe fe-activity"></i> <span>Feedback</span></a>
						</li>
						<li class="active">
							<a asp-page="/Admin/Blog/Index"><i class="fe fe-user-plus"></i> <span>Blog</span></a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /Sidebar -->
		<!-- Page Wrapper -->
		<div class="page-wrapper">
			<div class="content container-fluid">

				<!-- Page Header -->
				<div class="page-header">
					<div class="row">
						<div class="col-sm-12">
							<h3 class="page-title">Danh sách bài đăng</h3>
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-body">
								<div class="table-responsive">
									<div class="table-responsive">
										<table class="datatable table table-hover table-center mb-0">
											<thead>
												<tr>
													<th>#</th>
													<th>Tiêu đề</th>
													<th>Tác giả</th>
													<th>Ngày đăng</th>
													<th>Thẻ</th>
													<th>Lượt xem</th>
													<th>Xóa</th>
												</tr>
											</thead>
											<tbody>
												@if (Model.Blogs != null && Model.Blogs.Any())
												{
													foreach (var blog in Model.Blogs)
													{
														<tr>
															<td>@blog.Id</td>
															<td>@blog.Title</td>
															<td>@blog.AuthorName</td>
															<td>@blog.CreatedAt.ToString("yyyy-MM-dd")</td>
															<td>@string.Join(", ", blog.Tags)</td>
															<td>@blog.ViewCount</td>
															<td>
																<form method="post" asp-page-handler="Delete" asp-route-id="@blog.Id" onsubmit="return confirm('Bạn có chắc chắn muốn xoá người dùng này?');">
																	<button type="submit" class="btn btn-sm btn-danger">Xoá</button>
																</form>
															</td>
														</tr>
													}
												}
												else
												{
													<tr>
														<td colspan="6">Không có dữ liệu.</td>
													</tr>
												}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>

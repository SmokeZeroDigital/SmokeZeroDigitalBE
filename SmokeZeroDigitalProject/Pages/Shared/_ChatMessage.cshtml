@model SmokeZeroDigitalSolution.Application.Features.Chat.DTOs.ChatMessageDto

@{
    var isCoach = Model.CoachId != null && Model.CoachId != Guid.Empty;
    var alignment = isCoach ? "justify-content-start" : "justify-content-end";
    var bubbleClass = isCoach ? "bg-light border" : "bg-primary text-white";
    var textAlign = isCoach ? "text-start" : "text-end";
}

<div class="mb-2 d-flex @alignment">
    <div class="px-3 py-2 rounded-4 @bubbleClass shadow-sm" style="max-width: 75%;">
        <div class="@textAlign">@Model.Content</div>
        <small class="text-muted d-block @textAlign" style="font-size: 0.75rem;">
            @Model.CreatedAt.ToLocalTime().ToString("HH:mm")
        </small>
    </div>
</div>

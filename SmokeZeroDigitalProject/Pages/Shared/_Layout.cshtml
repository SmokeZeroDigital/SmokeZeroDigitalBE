    <!-- Toastify notification Razor logic giữ nguyên -->
    @await RenderSectionAsync("Scripts", required: false)
    @{
        // Toastify Razor logic giữ nguyên
        var toastMessage = TempData["ToastMessage"]?.ToString();
        var toastType = "";
        var toastText = "";
        if (!string.IsNullOrEmpty(toastMessage))
        {
            var parts = toastMessage.Split(new[] { ':' }, 2);
            if (parts.Length == 2)
            {
                toastType = parts[0];
                toastText = parts[1];
            }
            else
            {
                toastText = toastMessage;
            }
        }
    }
    @if (!string.IsNullOrEmpty(toastText))
    {
        <script>
            var text = "@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(toastText))";
            var type = "@toastType";
            var bgColor = "linear-gradient(to right, #00b09b, #96c93d)"; // Mặc định là success
            if (type === 'error') {
                bgColor = "linear-gradient(to right, #ff5f6d, #ffc371)";
            } else if (type === 'warning') {
                bgColor = "linear-gradient(to right, #ffb75e, #ed8f03)";
            }
            Toastify({
                text: text,
                duration: 4000,
                close: true,
                gravity: "top",
                position: "right",
                backgroundColor: bgColor,
                stopOnFocus: true
            }).showToast();

            document.addEventListener('DOMContentLoaded', function () {
                // Fix Bootstrap dropdown
                const dropdownElements = document.querySelectorAll('.dropdown-toggle');

                dropdownElements.forEach(function (element) {
                    element.addEventListener('click', function (e) {
                        e.preventDefault();
                        e.stopPropagation();

                        // Đóng tất cả dropdown khác
                        document.querySelectorAll('.dropdown-menu').forEach(function (menu) {
                            menu.classList.remove('show');
                        });

                        // Toggle dropdown hiện tại
                        const dropdownMenu = this.nextElementSibling;
                        if (dropdownMenu && dropdownMenu.classList.contains('dropdown-menu')) {
                            dropdownMenu.classList.toggle('show');
                        }
                    });
                });

                // Đóng dropdown khi click outside
                document.addEventListener('click', function (e) {
                    if (!e.target.closest('.dropdown')) {
                        document.querySelectorAll('.dropdown-menu').forEach(function (menu) {
                            menu.classList.remove('show');
                        });
                    }
                });

                // Debug: kiểm tra dropdown có tồn tại không
                console.log('Dropdown elements found:', dropdownElements.length);
        </script>
    }

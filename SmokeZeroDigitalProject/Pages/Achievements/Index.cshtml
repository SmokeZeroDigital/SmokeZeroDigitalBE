@page
@model SmokeZeroDigitalProject.Pages.Achievements.IndexModel
@{
}
<h2 class="text-center my-4">🎖️ Thành tích của tôi</h2>

@if (!Model.UserAchievements.Any())
{
    <div class="alert alert-info text-center">
        Bạn chưa đạt được thành tích nào. Hãy tiếp tục cố gắng!
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var ua in Model.UserAchievements)
        {
            <div class="col">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            @if (!string.IsNullOrEmpty(ua.Achievement.IconUrl))
                            {
                                <img src="@ua.Achievement.IconUrl" alt="Icon" class="me-3" style="width: 40px;" />
                            }
                            <h5 class="card-title mb-0 text-primary">@ua.Achievement.Title</h5>
                        </div>
                        <p class="card-text text-muted">@ua.Achievement.Description</p>
                        <span class="badge rounded-pill" style="background-color:@ua.Achievement.BadgeColor">
                            🗓️ @ua.AchievedDate.ToString("dd/MM/yyyy")
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
}
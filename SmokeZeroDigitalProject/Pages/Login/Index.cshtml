@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        max-width: 350px;
        margin: 60px auto;
        padding: 32px 24px 24px 24px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.08);
    }

    .login-title {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 24px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
    }

    input[type="text"], input[type="password"] {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }

    .btn-login {
        width: 100%;
        padding: 10px;
        background: #1976d2;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 8px;
        transition: background 0.2s;
    }

        .btn-login:hover {
            background: #125ea2;
        }

    .error-message {
        color: #d32f2f;
        margin-bottom: 12px;
        text-align: center;
    }
</style>

<div class="login-container">
    <div class="login-title">Sign In</div>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">@Model.ErrorMessage</div>
    }
    <form method="post">
        <div class="form-group">
            <label asp-for="LoginRequest.UserName">Username</label>
            <input asp-for="LoginRequest.UserName" type="text" autocomplete="username" />
        </div>
        <div class="form-group">
            <label asp-for="LoginRequest.Password">Password</label>
            <input asp-for="LoginRequest.Password" type="password" autocomplete="current-password" />
        </div>
        <button type="submit" class="btn-login">Login</button>
    </form>
</div>

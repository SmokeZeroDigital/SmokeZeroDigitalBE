<script>
	function handlePlanClick() {
		var isLoggedIn = @((isLoggedIn).ToString().ToLower());
		var hasPlan = @((hasPlan).ToString().ToLower());

		if (!isLoggedIn) {
			window.location.href = "/Login/Index";
			return;
		}
		if (!hasPlan) {
			window.location.href = "/Payment/Plan";
			return;
		}
		Toastify({
			text: "Bạn đã có gói thành viên rồi!",
			duration: 4000,
			close: true,
			gravity: "top",
			position: "right",
			backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
			stopOnFocus: true
		}).showToast();
	}
</script>
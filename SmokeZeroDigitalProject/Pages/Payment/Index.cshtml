    <link rel="stylesheet" href="~/user-assets/assets/css/custom.css">
    <style>
        .payment-success-wrapper {
            min-height: 80vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .payment-success-card {
            max-width: 420px;
            width: 100%;
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.12);
            border: none;
            margin: 0 auto;
        }
        .payment-success-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg,#0de0fe,#3fbbc0);
            border-radius: 50%;
            width: 70px;
            height: 70px;
            margin-bottom: 1.5rem;
        }
        .payment-success-icon i {
            color: #fff;
            font-size: 2.2rem;
        }
        .payment-success-title {
            color: #3fbbc0;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .payment-success-badge {
            font-size: 1rem;
            padding: 0.5rem 1.2rem;
            border-radius: 1rem;
            background: #e6f9f8;
            color: #1e856c;
            font-weight: 600;
            margin-bottom: 1rem;
            display: inline-block;
        }
        .payment-success-btn {
            background: linear-gradient(90deg, #0de0fe 0%, #3fbbc0 100%);
            color: #fff;
            border-radius: 2rem;
            font-weight: 600;
            min-width: 160px;
            box-shadow: 0 2px 8px 0 rgba(13,224,254,0.10);
            transition: background 0.2s;
            margin-top: 1.5rem;
        }
        .payment-success-btn:hover {
            background: linear-gradient(90deg, #3fbbc0 0%, #0de0fe 100%);
            color: #fff;
        }
    </style>
</head>
